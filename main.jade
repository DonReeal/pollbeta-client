doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    
    link(rel="stylesheet" href="bootstrap/css/bootstrap.css")
    link(rel="stylesheet" href="style.css")
    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular-animate.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular-route.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular-resource.js")
    script(src="baratine-js.js")
    // app
    script(src="js/chat.js")
    // controllers
    script(src="js/chatController.js")
  
  body(ng-app="chat" ng-controller="chatController")
    .header
      .container
        .row
          .col-xs-6
            #header-logo 
              h1 pollbus 
          .col-xs-6
            #login-form
              form(ng-class="userForm" role="form").form-inline
                .form-group
                  label.sr-only(for="userName") Name
                  input.login-field(ng-model="userName" ng-show="!loggedIn" type="text" placeholder="Login")
                .form-group
                  label.sr-only(for="userPassword") Password  
                  input.login-field(ng-model="userPassword" type="password" placeholder="Password" ng-show="!loggedIn")
                .clearfix.visible-md.visible-sm.visible-xs 
                input.btn.btn-primary.login-button(value="Anmelden" type="submit" ng-click="login()" ng-show="!loggedIn" ng-disabled="loggingIn")
                input.btn.btn-danger.login-button(value="Raus hier!" type="submit" ng-click="logout()" ng-show="loggedIn")

        .row
          .col-xs-6
            #header-bash
              ul#bash-elements
                li.exec chat
                li.module public
                li.module animals
                li.module funnycats
                li
                  a.value(onclick="valueExpand()") incoming: 8
    #main-content
      .container
        .row
            #bg-logo-relief-negative.col-xs-12.text-center 
              h1 chocolate

    footer.footer
      #chat-bar.container
        .row
          #boostrap2.col-xs-2.chat-window
            #boostrap12.col-xs-12
              .panel.panel-default
                .panel-heading.top-bar
                    text.hover #FunnyCats
