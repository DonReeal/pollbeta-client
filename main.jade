doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    
    link(rel="stylesheet" href="bootstrap/css/bootstrap.css")
    link(rel="stylesheet" href="style.css")
    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular-animate.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular-route.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.7/angular-resource.js")
    script(src="baratine-js.js")
    // app
    script(src="js/chat.js")
    // controllers
    script(src="js/chatController.js")
  
  body(ng-app="chat" ng-controller="chatController")
    .header
      .container
        .row
          .col-xs-6
            #header-logo 
              h1 pollbus 
          .col-xs-6.text-right
            form#login-form(ng-class="userForm" role="form")
              input.login-form-element(ng-model="userName" ng-show="!loggedIn" type="text" placeholder="Login")
              input.login-form-element(ng-model="userPassword" type="password" placeholder="Password" ng-show="!loggedIn")
              input.btn.btn-primary.login-button(value="Anmelden" type="submit" ng-click="login()" ng-show="!loggedIn" ng-disabled="loggingIn")
              input.btn.btn-danger.login-button(value="Raus hier!" type="submit" ng-click="logout()" ng-show="loggedIn")
        .row
          .col-xs-6
            #header-bash
              ul#bash-elements
                li.exec chat
                li.module public
                li.module german
                li.module funnycats
                li
                  a.value(onclick="valueExpand()") 127
    #main-content
      .container
        .row
          canvas.animation
        .row
          .col-xs-12.text-center
            #bg-logo-relief-negative 
              h1 chocolate


    footer.footer 
      .container
        .row 
          .col-xs-2.header-logo Chatboxes go here 